<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2>Algum(ns) <%= pluralize(@service.errors.count, "erro") %> impediu este item de ser salvo:</h2>
      <ul>
      <% @supply.errors.full_messages.each do |i, msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="field">
      <%= f.label :description, "DescriÃ§Ã£o" %><br>
      <%= f.text_area :description, rows: 2, cols: 30, autofocus: true, required: true %>
    </div>
    <div class="field _leftalg">
      <%= f.label :qty, "Quatidade" %><br>
      <%= f.number_field :qty, required: true %>
    </div>
    <div class="field">
      <%= f.label :value, "Valor (R$)" %><br>
      <%= f.text_field :value, required: true %>
    </div>
    <div class="field">
      <%= f.label :category_id, "Categoria" %><br>
      <%= f.select :category_id, @categories.map {|c| [c.name, c.id] }, {include_blank: 'Escolha o tipo'}, required: true %>
    </div>

  </div>
  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
<% end %>
